                    android:drawableLeft="@drawable/rightarrowrev"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#7a7979"
                    android:textSize="14dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="left|center" />
                <views.textview.TypefaceTextView
                    geekui:customTypeface="fonts/Ubuntu-R.ttf"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Basic Information"
                    android:id="@+id/bsinfo"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#ee000000"
                    android:textSize="18dp" />

                TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  Shipped to 12201"
