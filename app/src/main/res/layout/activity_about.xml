                geekui:customTypeface="fonts/Ubuntu-L.ttf"

                android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/browndark"
            android:textSize="15dp"
             />

            <views.textview.TypefaceTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terms &amp; Conditions"
            android:id="@+id/deded"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
                geekui:customTypeface="fonts/Ubuntu-R.ttf"

                android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#ee000000"
            android:textSize="18dp"
           />

            <views.textview.TypefaceTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, placerat in. Nunc dolor nulla leo, sit non aenean, neque leo, ipsum viverra lorem. Enim porta dui lacinia at, ipsum amet wisi justo, vitae turpis magnis sollicitudin felis odio quam. "
            android:id="@+id/swswsw"
                geekui:customTypeface="fonts/Ubuntu-L.ttf"

                android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/browndark"
            android:textSize="15dp"
            />

        </LinearLayout>
